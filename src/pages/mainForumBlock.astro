---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import EnterForum from '../components/EnterForum.astro';
import Titulos from '../components/Titulos.astro';
---

<Layout title='Punta de piedras'>
    <Nav enlace="https://walstar29.github.io/Portal-Ambiental/" text='Home' icon='fa-solid fa-house'
        enlace2="https://walstar29.github.io/Portal-Ambiental/mainGalleryBlock/" text2='Galeria' icon2='fa-solid fa-image'
        enlace3="https://walstar29.github.io/Portal-Ambiental/mainProjectsBlock/" text3='Proyectos' icon3='fa-solid fa-helmet-safety'
        enlace4='https://walstar29.github.io/Portal-Ambiental/mainEnvironmentsBlock/' text4='Ambiente' icon4='fa-solid fa-seedling'
        enlace5='https://walstar29.github.io/Portal-Ambiental/mainTourismBlock/' text5='Turismo' icon5='fa-solid fa-umbrella-beach'
        enlace6='https://walstar29.github.io/Portal-Ambiental/mainContactUsBlock/' text6='Contectenos' icon6='fa-solid fa-phone'
        enlace7='https://walstar29.github.io/Portal-Ambiental/mainForumBlock/' text7='Foro' icon7='fa-solid fa-users'
        enlace8='https://walstar29.github.io/Portal-Ambiental/signIn/' text8='Iniciar sesion' icon8=''>
    </Nav>


    <Titulos title='Requiere iniciar sesion para participar'></Titulos>
    <div class="contenedor">
        <div class="foros">
            <p>Inicia sesion a trav√©s del enlace</p>
            <a href="https://walstar29.github.io/Portal-Ambiental/signIn/">Iniciar sesion </a>
        </div>
    </div>
</Layout>

<style>
    .contenedor{
        padding: 2% 0 0 0;
    }

    .foros{
        width: 100%;
        background-color: rgb(255, 255, 255, 0.8);
        display: flex;
        flex-direction: column;
        justify-content: baseline;
        align-items: center;
        padding: 2% 0;
        transition: all 900ms;
        border-radius: 10px;
    }.foros:hover{
        background-color: rgba(0, 0, 0, 0.8);
        box-shadow: 0px 10px 60px 0px rgb(0, 0, 0);
        transition: all 900ms;
        color: rgb(255, 255, 255);
    }

    p{
        margin: 0 0 2% 0;
        font-size: 150%;
    }

    a{
        color: rgb(255, 255, 255);
        font-size: 100%;
    }

    @media(max-width: 900px){
        .contenedor{
            padding: 5% 0 0 0;
        }
    }
</style>