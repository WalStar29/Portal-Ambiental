---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import ContenedorPadres from "../layouts/ContenedorPadres.astro";
import Titulos from "../components/Titulos.astro";
import Informacion from "../components/Informacion.astro";
import ContenedorCartas from "../layouts/ContenedorCartas.astro";
import CartasInformativa from "../components/CartaInformativa.astro";

import festividadesTradiciones from '../data/FestividadesTradiciones.js';
import actividadesCulturales from '../data/ActividadesCulturalesEconomicas.js';
import faunaPuntaPiedras from '../data/FaunaPuntaPiedras.js'
import flora from '../data/Flora.js'
---

<Layout title='Punta de piedras'>
    <Nav enlace="https://walstar29.github.io/Portal-Ambiental/" text='Home' icon='fa-solid fa-house'
        enlace2="https://walstar29.github.io/Portal-Ambiental/mainGalleryBlock/" text2='Galeria' icon2='fa-solid fa-image'
        enlace3="https://walstar29.github.io/Portal-Ambiental/mainProjectsBlock/" text3='Proyectos' icon3='fa-solid fa-helmet-safety'
        enlace4='https://walstar29.github.io/Portal-Ambiental/mainEnvironmentsBlock/' text4='Ambiente' icon4='fa-solid fa-seedling'
        enlace5='https://walstar29.github.io/Portal-Ambiental/mainTourismBlock/' text5='Turismo' icon5='fa-solid fa-umbrella-beach'
        enlace6='https://walstar29.github.io/Portal-Ambiental/mainContactUsBlock/' text6='Contectenos' icon6='fa-solid fa-phone'
        enlace7='https://walstar29.github.io/Portal-Ambiental/mainForumBlock/' text7='Foro' icon7='fa-solid fa-users'
        enlace8='https://walstar29.github.io/Portal-Ambiental/signIn/' text8='Iniciar sesion' icon8=''>
    </Nav>

    <!-- ContenedorPadre -->
    <ContenedorPadres>
        <div>
            <Titulos title='Punta de piedras'></Titulos>
        </div>
        <Informacion subtitle='' img='' contexto='Punta de Piedras es una ciudad ubicada en la costa centro-sur de la Isla de Margarita​ y tiene una población,  según censo de 10.000 habitantes. Es la capital del Municipio Tubores, estado Nueva Esparta, que forma parte de la República Bolivariana de Venezuela. Es la puerta de entrada a la isla, ya que ahí se encuentran tres puertos marítimos; desde donde se puede navegar en pequeñas embarcaciones a las vecinas Isla de Cubagua e Isla de Coche. También conecta mediante el uso de Ferrys a la isla con el continente, específicamente con las ciudades de Puerto La Cruz, Cumaná y La Guaira. El clima es como el resto de la isla, tropical, de los 28º hasta los 42°C.'>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d30117.910166229405!2d-64.11043915274557!3d10.904541562118578!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8c31f7cc9dcf8c31%3A0x40babd702bc746bf!2sPunta%20de%20Piedras%2C%20Nueva%20Esparta!5e1!3m2!1ses!2sve!4v1730230321815!5m2!1ses!2sve" width="400" height="400" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </Informacion>
    </ContenedorPadres>

    <!-- ContenedorPadre 2 -->
    <ContenedorPadres>
        <div id="FestividadesTradiciones">
            <Titulos title='Festividades y tradiciones'></Titulos>
        </div>
        {festividadesTradiciones.map(f => ( <Informacion subtitle={f.subtitle} contexto={f.contexto} img={f.img} /> ))} 
    </ContenedorPadres>

    <!-- ContenedoPadre 3 -->
    <ContenedorPadres>
		<div id="ActividadesCulturalesEconómicas">
			<Titulos title='Actividades Culturales y Económicas'></Titulos>
		</div>
		{actividadesCulturales.map(a => (<Informacion subtitle={a.subtitle} contexto={a.contexto} img={a.img} /> ))}
	</ContenedorPadres>

    <!-- ContenedoPadre 4 -->
	<ContenedorPadres>
		<div id="Faunas">
			<Titulos title='Fauna de Punta de piedras'></Titulos>
		</div>
		<ContenedorCartas>
			{faunaPuntaPiedras.map(f => (<CartasInformativa titulo={f.titulo} contexto={f.contexto} imagen={f.imagen} enlace='' enlace2='' icon='' icon2='' />))}
		</ContenedorCartas>
	</ContenedorPadres>

    <!-- ContenedorPadre 5 -->
	<ContenedorPadres>
		<div id="Flora">
			<Titulos title='Flora de la laguna'></Titulos>
		</div>
		<ContenedorCartas>
			{flora.map(f => (<CartasInformativa titulo={f.titulo} contexto={f.contexto} imagen={f.imagen} enlace='' enlace2='' icon='' icon2='' />))}
		</ContenedorCartas>
	</ContenedorPadres>
</Layout>

<style>
    iframe{
        border-radius: 20px;
        transition: all 400ms;
        margin: 0;
    }

    iframe:hover{
        transform: scale(1.1);
        transition: all 400ms;
    }

	@media(max-width: 900px){
        iframe{
            margin: 5% 0 0 0;
        }
		iframe:hover{
			transform: none;
		}
	}
</style>