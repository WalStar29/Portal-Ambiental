<style>
    /* CONTENEDOR */
.contenedor{
    margin: 0 0 5% 0;
}

.div{
    text-align: center;
    padding: 10% 0 2% 0;
}

table{
    width: 100%;
    background: rgb(216, 217, 218, 0.9);
    backdrop-filter: blur(3px);
    margin: 0 0 2% 0;
    padding: 15px 0;
    border-collapse: collapse;
    border: solid black 3px;
}

th, td{
    padding: 2%;
    text-align: center;
}

thead{
    color: rgb(255, 246, 224);
    background-color: rgb(39, 40, 41, 0.9);
    border-bottom: solid 2px black;
}

tr:nth-child(even){
    background-color: rgb(39, 40, 41, 0.9) ;
}

tr:hover td{
    background-color: rgb(97, 103, 122);
    color: rgb(255, 246, 224);
}

tr td i{
    padding: 5%;
}

.contenedor_responsive{
	display: none;
}


/* ---------------------------RESPONSIVE MOBILE -------------------------*/
@media(max-width: 1300px){
    .div{
		text-align: center;
		padding: 5% 0 1% 0;
	}
}

@media(max-width: 900px){
	.contenedor{
		display: none;
	}

	/* CONTENEDOR RESPONSIVE */
	.contenedor_responsive{
		display: initial;
        background-color: rgb(39, 40, 41, 0.7);
