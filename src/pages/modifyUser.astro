---
import Layout from "../layouts/Layout.astro"
import Nav from '../components/NavAdmin.astro';
import Formulario from "../components/UserForm.astro";
---

<Layout title="Modificar usuario">
    <Nav enlace="/adminHome" text='Home' icon='fa-solid fa-house'
        enlace2="/adminGallery" text2='Galeria' icon2='fa-solid fa-image'
        enlace3="/adminProjects" text3='Proyectos' icon3='fa-solid fa-helmet-safety'
        enlace4='/adminEnvironments' text4='Ambiente' icon4='fa-solid fa-seedling'
        enlace5='/adminTourism' text5='Turismo' icon5='fa-solid fa-umbrella-beach'
        enlace6='/adminCounsellor' text6='Consejales' icon6='fa-solid fa-people-arrows'
        enlace7='/adminResearch' text7='Investigadores' icon7='fa-solid fa-magnifying-glass'
        enlace8='/adminForum' text8='Foro' icon8='fa-solid fa-users'
        enlace9='/adminForumAdmin' text9='Foros Administrativos' icon9='fa-solid fa-people-group'
        enlace10='/adminProfile' text10='Perfil' icon10='fa-solid fa-user'>
    </Nav>

    <div class="div">
		<h2>Modificacion del usuario</h2>
	</div>

        <Formulario question="Digite el nombre del nuevo usuario"
                    question2="Digite el apellido del nuevo usuario"
                    question3="Digite la cedula del usuario"
                    question4="Digite el numero de telefono"
                    question5="Digite el correo electronico del usuario"
                    question6="Digite el n uevo usuario de acceso"
                    question7="Digite la nueva contrasenia para el usuario"
                    
                    answer="Nombre"
                    answer2="Apellido"
                    answer3="Cedula"
                    answer4="Telefono"
                    answer5="Correo electronico"
                    answer6="Usuario nuevo"
                    answer7="Contrasenia nueva"
                    
                    button="Modificar"></Formulario>
</Layout>

<style>
.div{
    padding: 10% 0 2% 0;
    display: flex;
    text-align: center;
    justify-content: center;
}

    /* ---------------------------RESPONSIVE MOBILE -------------------------*/
@media(max-width: 900px){
	.div{
		display: flex;
		flex-direction: column;
		text-align: center;
	}
}
</style>