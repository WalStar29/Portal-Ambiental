---
interface Props{
    titulo : string
    contexto : string
    imagen : string

    icon : string
    enlace : string
    icon2 : string
    enlace2 : string
}

const {titulo, contexto, imagen, icon, enlace, icon2, enlace2} = Astro.props;
---

<div class="Cartas">
    <div class="div"> 
        <div class="contexto">
            <h1>{titulo}</h1>
            <img src={imagen} >

            <div class="doc">
                <a href={enlace}><i class={icon}></i></a>
                <a href={enlace2}><i class={icon2}></i></a>
            </div>

            <details>{contexto}</details>
        </div>
    </div>
    

    <div class="div">
        <slot />
    </div>
</div>


<style>
    .Cartas{
        border-radius: 20px;
        width: 35%;
        margin: 0 5% 5% 7%;
        display: flex;
        text-align: center;
        transition: all 500ms;
        display: inline-block;
    }.Cartas:hover{
        border: none;
        background-color: rgb(255, 246, 224);
        box-shadow: 0px 10px 30px 0px rgb(39, 40, 41);
        transition: all 500ms;
        transform: scale(1.1);
    }
    
    .Cartas .contexto{
        width: 100%;
        padding: 5% 0;
        display: flex;
        flex-direction: column;
        text-align: center;
        justify-content: center;
    }
    
    .Cartas img{
        width: 100%;
        border-radius: 20px;
    }
    
    details{
        margin: 5% 0 0 0;
        border-top: solid 3px rgb(0, 0, 0);
        border-radius: 50px;
    }
    
    .div{
        margin: 2% 0;
        width: 100%;
        display: flex;
        justify-content: space-evenly;
    }
    
    .doc{
        margin: 2% 0 0 0;
        display: flex;
        justify-content: space-evenly;
    }
    
    .doc a{
        color: #000000;
    }
    
    i{
        font-size: 170%;
    }
    
    h1{
        font-size: 150%;
        margin: 0 0 2% 0;
    }
    
        
    @media(max-width: 800px){
    .Cartas{
        width: 100%;
        margin: 0 0 10% 0;
    }.Cartas:hover{
            transform: scale(1.0);
        }
    }
</style>
    