---
    interface Props {

}
const {} = Astro.props;
---

<div class="Contenedor">
    <div class="contenedor1">
        <div class="titulo"><h1>Crear un Nuevo foro</h1></div>
        <div class="crear">
            <label for="">Asunto</label>
            <input type="text" id="input-texto" required>
            <button id="crear-div">Crear</button>
        </div>
    </div>

    <div class="contenedor2">
        <div class="container" id="contenedor"></div>
    </div>
</div>

<script src="/src/js/CreateForum.js"></script>

<style>
    .Contenedor{
        padding: 10% 0 0 0;
        display: flex;
    }

    .contenedor1{
        width: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .crear{
        width: 70%;
        margin: 2% 0 0 0;
        padding: 5%;
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: rgb(255, 255, 255, 0.8);
        transition: all 900ms;
        border-radius: 10px;
    }.crear:hover{
        background-color: rgba(0, 0, 0, 0.8);
        color: rgb(255, 255, 255);
    }

    input{
        width: 100%;
        padding: 2%;
        margin: 5% 0;
        border: none;
        border-radius: 5px;
    }

    button{
        padding: 2%;
        width: 30%;
        border-radius: 5px;
        border: none;
    }button:hover{
        background-color: wheat
    }

    .contenedor2{
        width: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .container {
        width: 90%;
        height: 500px;
        border-radius: 10px;
        background-color: rgb(255, 255, 255, 0.8);
        padding: 2% 0;
        transition: all 900ms;
    }.container:hover{
        background-color: rgba(0, 0, 0, 0.8);
        color: rgb(255, 255, 255);
    }


    @media(max-width: 900px){
        .Contenedor{
            display: flex;
            flex-direction: column;
            width: 100%;
            padding: 10% 0 0 0;
        }

        .contenedor1{
            width: 100%;
        }

        .contenedor2{
            width: 100%;
            margin: 2% 0 5% 0;
        }
    }
</style>