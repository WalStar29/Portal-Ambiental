---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<h1>{title}</h1>


<style>
	h1{
        padding: 10% 0 0 0;
        margin: 0 0 2% 0;
        text-align: center;
        width: 100%;
        font-size: 200%;
        text-transform: uppercase;
        color: rgb(0, 0, 0);
    }
    @media(max-width: 900px){
        h1{
            text-align: center;
            font-size: 170%;
        }
    }
</style>
